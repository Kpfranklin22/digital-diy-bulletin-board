<div class="container column">
    <div class="card-header dashboard-post center">
       <h4 class="card-title post-title center"><a>{{title}}</a></h4>
        <div class="card-body post-body center">
        <p class="card-body post-content description center">{{description}}</p>
        <p class="card-body post-venue center">{{venue}}</p>
        <p class="card-body post-time description center">{{event_time}}</p>
        <a class="center" href="{{img_source}}"><img src="{{img_source}}" class="flyer center" alt="flyer"/></a>


        <p class="card-text post-author">Posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}}</p>
        </div>
    </div>
</div>